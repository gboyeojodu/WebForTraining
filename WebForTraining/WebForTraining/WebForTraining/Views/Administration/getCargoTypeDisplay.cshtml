@using WebForTraining.Models;
@using WebForTraining.Database;
@{
   
    Layout = null;
    var CargoType = Administration.getCargoType();

}
@if (CargoType != null)
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover" id="tblCargoType">
            <thead>
                <tr>
                    <th>Cargo Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in CargoType)
                {
                    <tr>
                        <td><span class="underline">@obj.cargoTypeName</span></td>
                        <td style="width:9%" align="center">
                            <a data-id="@obj.cargoTypeID" onclick="javascript: ld_modal_fm('/Administration/AddEditCargoType', 'modalContentLoad', '@obj.cargoTypeID');" class="btn btn-metro btn-info btn-xs"> 
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a data-id="@obj.cargoTypeID" onclick="javascript: delRecord('@obj.cargoTypeID','/Administration/deleteCargoType');" class="btn btn-metro btn-danger btn-xs">
                                <i class="glyphicon glyphicon-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">No record to display</div>
}




